@model SignInViewModel
<h2>Sign in to use this app</h2>

<form method="post" asp-action="SignIn" asp-controller="Account" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName">Username</label>
        <input asp-for="UserName" autofocus />
        <span asp-validation-for="UserName"></span>
    </div>

    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="LifeMessage">LifeMessage</label>
        <textarea asp-for="LifeMessage" rows="3" placeholder="I like Earth..." ></textarea>
        <span asp-validation-for="LifeMessage"></span>
    </div>

    <div>
        <label asp-for="DateOfBirth">Date Of Birth</label>
        <input asp-for="DateOfBirth" type="date" />
        <span asp-validation-for="DateOfBirth"></span>
    </div>

    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="PasswordConfirmation">Confirm your password</label>
        <input asp-for="PasswordConfirmation" type="password" />
        <span asp-validation-for="PasswordConfirmation"></span>
    </div>

    <div>
        <label asp-for="Avatar">Avatar</label>
        <input asp-for="Avatar" type="file" />
        <span asp-validation-for="Avatar" class="text-danger"></span>  
    </div>

    <div>
        <input type="submit" value="Sign In" />
    </div>

</form>
<br />
<a asp-action="LogIn" asp-controller="Account" class="btn-dark">Log in</a>